{
  "manifest_version": 3,
  "name": "Bitbucket NPM Package Scanner",
  "version": "1.0.0",
  "description": "Scans package.json files in Bitbucket pull requests and shows latest npm versions",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://bitbucket.org/*", "https://registry.npmjs.org/*"],
  "content_scripts": [
    {
      "matches": ["https://bitbucket.org/*/pull-requests/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "NPM Package Scanner"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
